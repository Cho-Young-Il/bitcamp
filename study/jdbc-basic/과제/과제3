1
SELECT JOB_ID, MAX(SALARY), MIN(SALARY)
  FROM EMPLOYEES
 WHERE JOB_ID = 'SA_MAN' OR JOB_ID = 'SA_REP'
 GROUP BY JOB_ID;
 
2
SELECT JOB_ID, MAX(SALARY)
  FROM EMPLOYEES
 GROUP BY JOB_ID;
 
3
SELECT EMPLOYEE_ID, FIRST_NAME, SALARY
  FROM EMPLOYEES
 WHERE JOB_ID = 'IT_PROG'
 ORDER BY SALARY DESC;
 
4
SELECT E.FIRST_NAME, E.LAST_NAME, E.SALARY
  FROM EMPLOYEES E, JOBS J
 WHERE E.JOB_ID = J.JOB_ID 
       AND J.JOB_TITLE = 'Sales Representative'
       AND (E.SALARY BETWEEN 9000 AND 10000);
       
5
SELECT J.JOB_TITLE, SUM(E.SALARY)
  FROM EMPLOYEES E, JOBS J
 WHERE E.JOB_ID = J.JOB_ID
 GROUP BY J.JOB_TITLE
HAVING SUM(E.SALARY) > 30000;

6
SELECT E.LAST_NAME, E.SALARY
  FROM EMPLOYEES I, EMPLOYEES M, EMPLOYEES E
 WHERE I.EMPLOYEE_ID = M.EMPLOYEE_ID AND M.SALARY < E.SALARY