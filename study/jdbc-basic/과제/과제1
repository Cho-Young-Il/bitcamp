13. 
SELECT *
  FROM T77_TEXT
 WHERE TO_CHAR(REG_TIME, 'DD') = TO_CHAR(SYSDATE, 'DD'); 
 
 
14. 
SELECT *
  FROM T77_TEXT
 WHERE TO_CHAR(REG_TIME, 'MM') = TO_CHAR(SYSDATE, 'MM'); 
 

15. 
SELECT *
  FROM T77_TEXT
 WHERE TITLE LIKE '%오늘%'; 


16. 
SELECT *
  FROM T77_TEXT
 WHERE USER_ID = 'USER1'; 
 
 
17. 
SELECT *
  FROM T77_TEXT
 WHERE CONTENT LIKE '%할일%'; 