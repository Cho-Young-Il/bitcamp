	SYSDATE, 0, 0
);		


7.
INSERT INTO T77_TEXT (
	TEXT_NO, TITLE, CONTENT, USER_ID, 
	REG_TIME, READ_COUNT, RECOM_COUNT
) VALUES (
	2, '오늘하루', '할 일 많았다', 'USER2',
	SYSDATE, 0, 0
);


8.
INSERT INTO T77_TEXT (
	TEXT_NO, TITLE, CONTENT, USER_ID, 
	REG_TIME, READ_COUNT, RECOM_COUNT
) VALUES (
	3, '오늘하루', '할 일이란 과연 무었일까?', 'USER3',
	SYSDATE, 0, 0
);


9.
UPDATE (SELECT * 
		  FROM T77_TEXT
		 WHERE TEXT_NO = 1)
   SET READ_COUNT = READ_COUNT + 1
 WHERE NOT USER_ID = 'USER3';
 
 
10.
UPDATE (SELECT * 
		  FROM T77_TEXT
		 WHERE TEXT_NO = 1)
   SET READ_COUNT = READ_COUNT + 1
 WHERE NOT USER_ID = 'USER1';
 

